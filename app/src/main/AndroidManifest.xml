<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supets.pet.mockui">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name="com.supets.pet.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/CustomAppTheme">

        <activity android:name="com.supets.pet.mock.ui.home.MockUiActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.supets.pet.zxing.TestScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Camera_Theme" />
        <activity
            android:name="com.supets.pet.zxing.TestGeneratectivity"
            android:screenOrientation="portrait"
            android:theme="@style/Camera_Theme" />
        <activity
            android:name="com.supets.pet.mock.ui.crop.MaincROPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Camera_Theme" />
        <activity
            android:name="com.supets.pet.mock.ui.crop.MainCrop2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supets.pet.mock.ui.paste.MainPasteActivity"
            android:screenOrientation="portrait" />

        <!--测试-->
        <service
            android:name="com.supets.pet.uctoast.ListenClipboardService"
            android:enabled="true"
            android:exported="true"
            android:process=":process" />

        <receiver
            android:name="com.supets.pet.uctoast.BootCompletedReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
